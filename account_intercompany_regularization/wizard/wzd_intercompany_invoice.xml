<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_regularization_wizard" model="ir.ui.view">
        <field name="name">Regularization</field>
        <field name="model">wzd.intercompany.regularization</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="from_date" />
                    </group>
                    <group>
                        <field name="to_date"/>
                    </group>
                </group>
                <footer>
                    <button name="action_regularize"
                            string="Execute"
                            type="object"
                            class="oe_highlight"/>
                    or
                    <button string="Close"
                            class="oe_link"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_regularization_wizard" model="ir.actions.act_window">
        <field name="name">Regularization</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wzd.intercompany.regularization</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account_intercompany_regularization.model_wzd_intercompany_regularization"/>
        <field name="binding_view_types">list</field>
    </record>

    <menuitem
        action="action_view_regularization_wizard"
        id="pms_property_menu"
        parent="pms.pms_configuration_menu"
        sequence="65"
        name="Intercompany Regularization"
    />
</odoo>
