<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.cron" id="send_exit_email_folio">
            <field name="name">Send Exit Email</field>
            <field name="interval_number">1</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="state">code</field>
            <field name="model_id" ref="model_pms_folio" />
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 21:00:00')" />
            <field name="code">model.send_exit_mail()</field>
        </record>

    </data>
</odoo>
